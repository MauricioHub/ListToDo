<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListToDo.MainPage">

    <StackLayout>
        <Label Text="{Binding Id}"></Label>
        <Label Text="Nombre"></Label>
        <Entry Text="{Binding Name}"></Entry>
        <Label Text="Descripcion"></Label>
        <Entry Text="{Binding Description}"></Entry>
        <Label Text="DeadLine"></Label>
        <Entry Text="{Binding DeadLine}"></Entry>
        <Label Text="{Binding Name}"></Label>
        <Button Text="Guardar" Command="{Binding GuardarCommand}"></Button>
        <Button Text="Eliminar" Command="{Binding EliminarCommand}"></Button>
        <Button Text="Limpiar" Command="{Binding LimpiarCommand}"></Button>
        <Button x:Name="btnSecondXaml"
                    Text="List of Tasks!"
                    HorizontalOptions="Center"
                    VerticalOptions="StartAndExpand"
                    Clicked="OnbtnSecondXaml" />
    </StackLayout>

</ContentPage>
